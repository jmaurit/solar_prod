	file = {Full Text PDF:/Users/johannesmauritzen/Library/Mobile Documents/com~apple~CloudDocs/zotero/storage/X8RS34HF/DeAngelo et al. - 2004 - Dividend Policy, Agency Costs, and Earned Equity.pdf:application/pdf}
