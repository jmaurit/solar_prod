	file = {ScienceDirect Full Text PDF:/Users/johannesmauritzen/Library/Mobile Documents/com~apple~CloudDocs/zotero/storage/HAS5THI8/Murdock et al. - 2017 - Exploration and exploitation of Victorian science .pdf:application/pdf;ScienceDirect Snapshot:/Users/johannesmauritzen/Library/Mobile Documents/com~apple~CloudDocs/zotero/storage/IG2QDFQJ/S0010027716302840.html:text/html}
}

