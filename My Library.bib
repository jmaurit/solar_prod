	journal = {Journal of Energy Finance \& Development},
	author = {Dahl, Carol and Duggan, Thomas E.},
	year = {1998},
	pages = {129--169},
	file = {ScienceDirect Full Text PDF:/Users/johannesmauritzen/Library/Mobile Documents/com~apple~CloudDocs/zotero/storage/XRW47FEA/Dahl and Duggan - 1998 - Survey of price elasticities from economic explora.pdf:application/pdf;ScienceDirect Snapshot:/Users/johannesmauritzen/Library/Mobile Documents/com~apple~CloudDocs/zotero/storage/NWG6IVIV/S1085744399800726.html:text/html}
}

