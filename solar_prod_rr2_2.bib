	keywords = {Call conference, commodification, commodity technology market, commodity trading, consumer electronics, Consumer electronics, consumer electronics product, Costs, DP industry, History, Microcomputers, microeconomics, Personal communication networks, pricing, Pricing, Resists, Silicon, Telephone sets},
	pages = {73--75},
	file = {IEEE Xplore Abstract Record:/Users/johannesmauritzen/Zotero/storage/V6NH8ZV5/1289293.html:text/html}
}
