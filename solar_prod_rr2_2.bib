	author = {Matsubayashi, Nobuo and Yamada, Yoshiyasu},
	month = jun,
	year = {2008},
	keywords = {Consumers’ loyalty, Consumers’ sensitivity, Economics, Non-cooperative game, Price and quality competition, Vertical and horizontal differentiation},
	pages = {571--581},
	file = {ScienceDirect Full Text PDF:/Users/johannesmauritzen/Zotero/storage/RXYJ725R/Matsubayashi and Yamada - 2008 - A note on price and quality competition between as.pdf:application/pdf;ScienceDirect Snapshot:/Users/johannesmauritzen/Zotero/storage/WL6N5RXF/S0377221707003475.html:text/html}
